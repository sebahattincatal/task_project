{% extends 'base.html.twig' %}

{% block body_id 'homepage' %}

{% block header %}{% endblock %}
{% block footer %}{% endblock %}

{% block body %}
    <div class="page-header">
        <h1>{{ 'title.homepage'|trans|raw }}</h1>
    </div>

    <div class="row">
        <div class="col-sm-12">

            <div class="jumbotron">
                <p>
                    {{ 'help.browse_register_info'|trans|raw }}
                </p>
                <p>
                    <a class="btn btn-info btn-lg" href="{{ path('user_registration') }}">
                        <i class="fa fa-lock"></i> {{ 'help.browse_register'|trans }}
                    </a>
                </p>
            </div>

            <div class="jumbotron">
                <p>
                    {{ 'help.browse_admin'|trans|raw }}
                </p>
                <p>
                    <a class="btn btn-info btn-lg" href="{{ path('admin_index') }}">
                        <i class="fa fa-lock"></i> {{ 'action.browse_admin'|trans }}
                    </a>
                </p>
            </div>
        </div>
    </div>
{% endblock %}
